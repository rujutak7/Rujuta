test program1 [[ 
	class A{
		public static void main(String[] a){
			{
				System.out.println (1);
			}
		}
	} 
	
	class B{
	public int m(){
		return 1;
		}
	}
	
	
	class C{
		int a;
	public int m1(){
		return 1;
		}
	}
]] parse succeeds


test inheritance [[ 
	class A{
		public static void main(String[] a){
			{
				System.out.println (1);
			}
		}
	} 
	
	class B{
	public int m(){
		return 1;
		}
	}
	
	
	class C extends B{
		int a;
	public int m1(){
		return 1;
		}
	}
]] parse succeeds


test overriding [[ 
	class A{
		public static void main(String[] a){
			{
				System.out.println (1);
			}
		}
	} 
	
	class B{
	public int m(){
		return 1;
		}
	}
	
	
	class C extends B{
		int a;
		
		public int m(){
		return 2;
		}
		
	public int m1(){
		return 1;
		}
	}
]] parse succeeds




